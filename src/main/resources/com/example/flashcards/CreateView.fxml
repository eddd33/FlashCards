                                                                                 </children>
                                                                              </HBox>
                                                                              <ListView fx:id="addTagListView" prefHeight="138.0" prefWidth="242.0" />
                                                                           </children>
                                                                           <padding>
                                                                              <Insets top="5.0" />
                                                                           </padding>
                                                                        </VBox>
                                                                     </children>
                                                                  </AnchorPane>
                                                            </content>
                                                          </TitledPane>
                                                          <TitledPane animated="false" text="Question">
                                                            <content>
                                                              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                                                     <children>
                                                                        <TextArea fx:id="questionTextArea" prefHeight="200.0" prefWidth="311.0" promptText="Entrer la question ici" />

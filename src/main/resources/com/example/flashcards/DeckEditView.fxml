<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flashcards.controller.DeckEditViewController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Deck">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#validateCmd" text="Valider les modifications" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#exitApplicationCmd" text="Quitter l'application" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <VBox spacing="5.0">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Nom : " />
                        <TextField fx:id="deckNameTextField" promptText="Entrer le nom du deck" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Auteur : " />
                        <TextField fx:id="deckAuthorTextField" promptText="Entrer l'auteur du deck" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label text="Description : " />
                        <TextArea fx:id="deckDescTextArea" prefHeight="100.0" prefWidth="500.0" promptText="Entrer la description ici" />
                     </children>
                  </HBox>
                  <Label text="Tags">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <VBox spacing="5.0">
                     <children>
                        <HBox spacing="5.0">
                           <children>
                              <TextField fx:id="addTagTextField" onAction="#ajouterTagCmd" promptText="Ajouter un tag" />
                              <Button mnemonicParsing="false" onAction="#ajouterTagCmd" text="Ajouter" />
                           </children>
                        </HBox>
                        <ListView fx:id="deckTagListView" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="134.0" prefWidth="300.0" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#validateCmd" text="Valider" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </padding>
            </VBox>
      </children>
         <VBox.margin>
            <Insets left="5.0" top="5.0" />
         </VBox.margin>
    </AnchorPane>
  </children>
</VBox>
